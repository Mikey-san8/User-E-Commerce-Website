@inherits LayoutComponentBase

<LayoutSub_Header/>

<header id="mainHeader" class="sticky top-0 z-10 bg-gray-100/80 backdrop-blur-sm shadow-lg text-secondary">
    <div class="relative container flex justify-between items-center gap-6 mx-auto py-5 px-6 md:px-0">

        <a href="/" class="text-xl font-semibold">eGatang</a>

        <div class="relative flex-grow">
            <input type="text"
                   placeholder="Search product/s"
                   class="w-full border rounded-lg px-4 py-2 pr-10" />
            <button type="submit"
                    class="absolute right-2 top-1/2 -translate-y-1/2 p-1 rounded-md hover:bg-background">
                <img src="https://www.svgrepo.com/show/532554/search-alt.svg"
                     class="w-5 h-5"
                     alt="Search" />
            </button>
        </div>

        <img id="cart" src="https://www.svgrepo.com/show/80543/shopping-cart-outline.svg" class="w-7 h-7 cursor-pointer" />

        <LayoutMenu />
    </div>
</header>

@Body

<LayoutFooter/>
