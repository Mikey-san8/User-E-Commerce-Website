@inherits LayoutComponentBase

<div class="bg-secondary text-white p-2">

    <div class="container mx-auto flex justify-between items-center gap-5">
        <div class="flex gap-4">
            <a href="/selling" class="hover:text-primary">Start Selling</a>
            <a href="/track" class="hover:text-primary">Track Order</a>
            <a href="/express" class="hover:text-primary">
                ePaw-it Services
            </a>
        </div>

        <div class="flex gap-4">
            <a href="/about" class="hover:text-primary">Help?</a>
            <a href="/privacy" class="hover:text-primary">Privacy Policy</a>
            <a href="/login" class="hover:text-primary">Login</a>
            <span>|</span>
            <a href="/register" class="hover:text-primary">Sign Up</a>
        </div>

    </div>

</div>

<header id="mainHeader" class="sticky top-0 z-50 bg-gray-100/80 backdrop-blur-sm shadow-lg text-secondary">
    <div class="container flex justify-between items-center gap-10 mx-auto py-5 px-2">

        <a href="/" class="text-xl font-semibold">eGatang</a>

        <div class="relative flex-grow">
            <input type="text"
                   placeholder="Search product/s"
                   class="w-full border rounded-lg px-4 py-2 pr-10" />
            <button type="submit"
                    class="absolute right-2 top-1/2 -translate-y-1/2 p-1 rounded-md hover:bg-background">
                <img src="https://www.svgrepo.com/show/532554/search-alt.svg"
                     class="w-5 h-5"
                     alt="Search" />
            </button>
        </div>

        <img id="cart" src="https://www.svgrepo.com/show/80543/shopping-cart-outline.svg" class="w-7 h-7 cursor-pointer" />
    </div>
</header>

@Body

<LayoutFooter/>